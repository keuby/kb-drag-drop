{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true, // 同时生成声明文件
    "target": "es2015",
    "module": "esnext",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "lib": ["es2018", "dom"],
    "paths": {
      "core": ["src/core"],
      "core/*": ["src/core/*"],
      "shared/*": ["src/shared/*"]
    }
  }
}
